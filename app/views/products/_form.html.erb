<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "Enter Product Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, placeholder: "Enter a description of the product", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.number_field :quantity, placeholder: "Enter initial quantity", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :price, placeholder: "Enter the unit price of the product", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.select :category_id, @categories.collect { |c| [ c.name, c.id ]}, {include_blank: "Please select a category" } %>
  </div>

  <div class="form-group">
    <%= form.text_field :brand, placeholder: "Enter the brand of the product", class: "form-control" %>
  </div>

  <%= form.submit "Submit",:class =>'btn btn-success' %>
<% end %>
